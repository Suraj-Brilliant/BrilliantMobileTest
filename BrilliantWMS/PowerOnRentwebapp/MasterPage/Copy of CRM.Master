    <obout:Flyout runat="server" ID="FlyoutProfileSettings" AttachTo="settings" OpenEvent="ONCLICK"
        CloseEvent="ONMOUSEOUT" Position="BOTTOM_CENTER">
        <div id="flyoutDiv">
            <table cellspacing="5" cellpadding="5" style="text-align: left; margin: 10px;">
                <tr>
                    <td>
                        <a class="linksettings" target="_self" href="../UserManagement/ProfileSetting.aspx">
                            Profile Settings</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a class="linksettings" onclick="openChangePassword();">Change Password</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a class="linksettings">Change Theme</a>
                    </td>
                </tr>
            </table>
        </div>
    </obout:Flyout>
    <script type="text/javascript">
        function opensettings() {
            <%=FlyoutProfileSettings.getClientID()%>.Open();
        }

        function openChangePassword() {
            window.open("../Login/ChangePassword.aspx", null, 'height=185, width=396,status= 0, resizable= 0, scrollbars=0, toolbar=0,location=0,menubar=0, screenX=0; screenY=0');
        }

        function WaterMark(txt, evt, defaultText) {
            if (txt.value.length == 0 && evt.type == "blur") {
                txt.style.color = "white";
                txt.value = defaultText;
            }
            if (txt.value == defaultText && evt.type == "focus") {
                txt.style.color = "white";
                txt.value = "";
            }
        }
        function clearSession() {        
          PageMethods.WMClearSession(null, null);
         }
    </script>
